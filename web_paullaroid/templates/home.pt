<tal:block metal:use-macro="load: layout.pt">

    <nav id="menu-main" class="clearfix" role="navigation" metal:fill-slot="navigo">
      <a href="${request.route_path('home')}">Home</a>
    </nav>
    
    <nav id="menu-events" metal:fill-slot="main">
       <h2>Les Galeries</h2>
       <ul>
        <li tal:repeat="event events">
  	  <a class="event-link"
  	     href="${request.route_path('event',event=event.key[0])}">
  	    <h3>${event.key[0]}</h3>
  	  
	  
          <p class="event">
            il y a actuellement ${event.value['nb']} photos dans cette galerie
          </p>
	  </a>
	</li>
      </ul>
    </nav>
</tal:block>
