<tal:block metal:use-macro="load: layout.pt">        

    <nav metal:fill-slot="navigo">
       <a href="${request.route_path('home')}">Home</a> &gt; <a href="${request.route_path('event', event=event_name)}"> ${event_name}</a>
    </nav>

  <div id="main" metal:fill-slot="main">
    <div id="search">
      <h3>Chercher votre photo : </h3>
      <form method="GET" action= "${request.route_path('event', event=event_name)}">
        <select id="date_pict" name="date_pict">
	  <tal:block repeat="date dates">
            <option
		selected="selected"
		value="${date.isoformat()}"
		tal:condition="date.isoformat() == request.GET.get('date_pict')">
              ${date.strftime('%d-%m-%Y')}
            </option>
	      <option
		  value="${date.isoformat()}"
		  tal:condition="date.isoformat() != request.GET.get('date_pict')">
                  ${date.strftime('%d-%m-%Y')}
            </option>
	  </tal:block>
        </select>
        <input type="submit" value="Chercher" />
      </form>

          </div>
          <div tal:repeat="image images" style="display:block; width:200px;
float:left; padding-left:5px;">
                <a href="${request.route_path('image',image=image, event=request.matchdict['event'])}">
                <img src="${request.route_path('image_thumb',
                                                event=request.matchdict['event'],
                                                image=image)}" 
                     alt="${image}">
                </a>
            </div>
       </div>
</tal:block>

